<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/constLayout">
        <ImageView
            android:id="@+id/star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_star_nocolor"
            android:tint="@color/black"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/number_zero"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:id="@+id/count_upvote"
            app:layout_constraintLeft_toRightOf="@+id/star"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/count_downvote"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintVertical_bias="1.0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/number_zero"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/count_downvote"
            app:layout_constraintRight_toLeftOf="@+id/comment"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_comment"
            android:tint="@color/black"
            android:textAlignment="center"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>
</merge>