<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="3dp">
        <ToggleButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ivLike"
            android:textOff="@string/string_empty"
            android:textOn="@string/string_empty"
            android:text="@string/string_empty"
            android:checked="false"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_star_nocolor"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivLike"
            android:layout_marginStart="10dp"
            android:text="@string/number_zero"
            android:textColor="@color/black"
            android:id="@+id/tvLike"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/ivLike"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />
        <ToggleButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ivComment"
            android:textOff="@string/string_empty"
            android:textOn="@string/string_empty"
            android:text="@string/string_empty"
            android:checked="false"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_comment"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/tvLike"
            android:layout_marginLeft="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvComment"
            android:layout_marginEnd="10dp"
            android:text="@string/number_zero"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/ivComment"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>
</merge>